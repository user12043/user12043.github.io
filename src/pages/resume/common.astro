---
import Grid from "../../components/Grid.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import Section from "../../components/resume/Section.astro";
import WorkItem from "../../components/resume/WorkItem.astro";
---

<BaseLayout title="Resume" description="resume">
	<div class="stack wrapper" style="text-align: center;">
		<Grid>
			<div id="header" class="stack">
				<h3>Muaz KARATAÅž</h3>
				<ul id="contact-info">
					<li><span>Nationality:</span>Turkey</li>
					<li><span>Date of Birth:</span>1998</li>
					<li><span>Gender:</span>Male</li>
					<li><span>E-Mail:</span>user12043@hotmail.com</li>
				</ul>
			</div>

			<img
				alt="Muaz looking with confidence in a green environment"
				width="250"
				src="/assets/portrait.jpg"
				id="portrait"
			/>
		</Grid>
		<Grid>
			<div>
				<Section title="SKILLS">JAVA SPRING REST</Section>
				<Section title="EDUCATION">
					<WorkItem
						title="Computer Science (Bachelor)"
						description="Sakarya University, Sakarya, Turkey [2016 - 2020]"
						image="/assets/sau-logo.png"
					>
						<code style="font-style: oblique">
							<a
								href="https://ebs.sakarya.edu.tr/Birim/DersPlan/255?culture=en-US"
								target="_blank"
							>
								https://ebs.sakarya.edu.tr/Birim/DersPlan/255?culture=en-US
							</a>
						</code>
					</WorkItem>
				</Section>
			</div>
			<div>
				<Section title="WORK EXPERIENCE">
					<WorkItem
						title="Software Engineer"
						description="Huawei / HTRDC Office / Full Remote, Turkey [2022 - now]"
						image="/assets/huawei-logo-light.svg"
					>
						<ul>
							<li>Maintain</li>
							<li>Review</li>
						</ul>
					</WorkItem>
				</Section>
			</div>
		</Grid>
	</div>
</BaseLayout>

<style>
	ul.grid {
		justify-content: space-around;
	}

	#portrait {
		margin-left: auto;
		border-radius: 2.3rem;
	}

	#header {
		text-align: left;
		/* margin-left: 15%; */
		margin-right: 15%;
		justify-content: space-around;
	}

	#contact-info {
		list-style: none;
		padding: 0;
		margin-top: 0.4em;
	}

	#contact-info > li {
		display: flex;
		justify-content: space-between;
	}

	#contact-info > li > span {
		font-weight: bold;
	}
</style>
